<form class="flexcol">
    <div class="form-group">
        <label>Title:</label>
        {{#if titles.length}}
            <select name="title">
                {{#each titles as |title id|}}
                    <option value="{{title}}">{{title}}...</option>
                {{/each}}
            </select>
        {{else}}
            <input type="text" name="title">
        {{/if}}
    </div>
    <div class="form-group">
        <label>To:</label>
        <select name="to">
            {{#each users as |user id|}}
                <option value="{{user.name}}">{{user.name}}{{#if user.isGM}} (GM){{/if}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label>Message:</label>
        <textarea name="message"></textarea>
    </div>
</form>